@model IEnumerable<WebApplication1.Models.Department>

@{
    ViewData["Title"] = "Department List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Department</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Location</th>
            <th>Number of Personals</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.DepartmentName</td>
                <td>@department.DepartmentCode</td>
                <td>@department.Location</td>
                <td>@department.NumberOfPersonals</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@department.DepartmentCode" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@department.DepartmentCode" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
